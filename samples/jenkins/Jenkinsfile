                        </body>
                        </html>
                    '''
                }
            }
        }
        stage('Publish HTML Report') {
            steps {
                publishHTML(target: [
                        reportName : 'Sample HTML Report',
                        reportDir  : 'reports',
                        reportFiles: 'index.html',
