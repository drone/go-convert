            }
        }

        stage('Upload to Nexus') {
            steps {
                nexusArtifactUploader artifacts: [[
                    artifactId: 'fruit-names-v0.1',
                    file: 'fruit_names.txt',
                    type: 'txt'
                ]],
                credentialsId: 'nexus-hnstest01-creds',
                groupId: 'test01',
                nexusUrl: '4.24.1.21:9192/',
                repository: 'plg01maven2',
                version: '1.12'
