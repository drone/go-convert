name: default
stages:
- name: Docker Image CI
  spec:
    clone: {}
    platform:
      arch: amd64
      os: linux
    runtime:
      spec: {}
      type: machine
    steps:
    - name: Build the Docker image
      spec:
        run: docker build . --file Dockerfile --tag my-image-name:$(date +%s)
      type: script
  type: ci
version: 1
