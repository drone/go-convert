version: 1
pipeline:
  env:
    BRANCH_NAME: <+trigger.branch>
    BUILD_ID: <+pipeline.sequenceId>
    COMMIT_SHA: <+trigger.commitSha>
    PROJECT_ID: <+project.name>
    PROJECT_NUMBER: <+pipeline.sequenceId>
    REPO_NAME: <+trigger.payload.repository.name>
    REVISION_ID: <+trigger.commitSha>
    SHORT_SHA: <+codebase.shortCommitSha>
    TAG_NAME: <+trigger.commitSha>
  stages:
  - platform:
      arch: amd64
      os: linux
    runtime:
      cloud: {}
    volumes:
      - name: dockersock
        uses: bind
        with:
          path: /var/run/docker.sock
    steps:
      - name: bash
        run:
          container:
            image: bash
            volumes:
            - source: dockersock
              target: /var/run/docker.sock
          script: |
            #!/usr/bin/env bash
            echo "Hello World"
      - name: ubuntu
        run:
          container:
            image: ubuntu
            volumes:
            - source: dockersock
              target: /var/run/docker.sock
          script: echo hello

      - name: python
        run:
          container:
            image: python
            volumes:
            - source: dockersock
              target: /var/run/docker.sock
          script: |-
            #!/usr/bin/env python
            print('hello from python')
