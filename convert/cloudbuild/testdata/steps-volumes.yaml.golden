version: 1
pipeline:
  env:
    BRANCH_NAME: <+trigger.branch>
    BUILD_ID: <+pipeline.sequenceId>
    COMMIT_SHA: <+trigger.commitSha>
    PROJECT_ID: <+project.name>
    PROJECT_NUMBER: <+pipeline.sequenceId>
    REPO_NAME: <+trigger.payload.repository.name>
    REVISION_ID: <+trigger.commitSha>
    SHORT_SHA: <+codebase.shortCommitSha>
    TAG_NAME: <+trigger.commitSha>
  stages:
  - platform:
      arch: amd64
      os: linux
    runtime:
      cloud: {}
    volumes:
      - name: vol1
        uses: temp
        with: {}
      - name: dockersock
        uses: bind
        with:
          path: /var/run/docker.sock
    steps:
      - name: ubuntu
        run:
          container:
            args:
            - -c
            - |
              echo "Hello, world!" > /persistent_volume/file
            entrypoint: bash
            image: ubuntu
            volumes:
            - source: dockersock
              target: /var/run/docker.sock
            - source: vol1
              target: /persistent_volume
      - name: ubuntu1
        run:
          container:
            args:
            - cat
            - /persistent_volume/file
            image: ubuntu
            volumes:
            - source: dockersock
              target: /var/run/docker.sock
            - source: vol1
              target: /persistent_volume
