stages:
- name: notify
  spec:
    platform:
      arch: amd64
      os: linux
    runtime:
      spec: {}
      type: cloud
    steps:
    - spec:
        image: plugins/slack
        with:
          access_token: $SLACK_ACCESS_TOKEN
          channel: $SLACK_DEFAULT_CHANNEL
          custom_block: |
            {
              "blocks": [
                {
                  "type": "section",
                  "fields": [
                    {
                      "type": "plain_text",
                      "text": "*This is a text notification*",
                      "emoji": true
                    }
                  ]
                }
              ]
            }
      type: plugin
  type: ci
version: 1
