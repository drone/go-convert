{
    "pipeline": {
        "identifier": "myPipeline1",
        "name": "My Deployment Pipeline",
        "description": "",
        "properties": {
            "ci": {
                "codebase": {
                    "repoName": "mycode.git",
                    "connectorRef": "account.gitconnector",
                    "build": "<+input>"
                }
            }
        },
        "stages": [
            {
                "stage": {
                    "identifier": "stage1",
                    "name": "stage1",
                    "type": "CI",
                    "description": "Build artifacts off master and upload to artifacts repo",
                    "spec": {
                        "infrastructure": {
                            "type": "Kubernetes-direct",
                            "useFromStage": "",
                            "spec": {
                                "namespace": "harness-delegate",
                                "connectorRef": "cidelegate"
                            }
                        },
                        "cloneCodebase": true,
                        "sharedPaths": [
                            "myPath",
                            "myPath2"
                        ],
                        "variables": [
                            {
                                "name": "REPLACE_USERNAME_HERE",
                                "type": "Secret",
                                "value": "REPLACE_USERNAME_HERE"
                            },
                            {
                                "name": "param1",
                                "type": "Text",
                                "value": "value1"
                            }
                        ],
                        "serviceDependencies": [
                            {
                                "identifier": "database",
                                "name": "database",
                                "type": "Service",
                                "description": "",
                                "spec": {
                                    "envVariables": {
                                        "kube_context": "myContext ${mySecret}"
                                    },
                                    "entrypoint": [
                                        "mysqld"
                                    ],
                                    "args": [
                                        "--character-set-server=utf8mb4"
                                    ],
                                    "connectorRef": "np-quotecenter",
                                    "image": "us.gcr.io/platform-205701/mysql:12",
                                    "resources": {
                                        "limits": {
                                            "memory": "0B",
                                            "cpu": "250m"
                                        }
                                    }
                                }
                            }
                        ],
                        "execution": {
                            "steps": [
                                {
                                    "step": {
                                        "identifier": "buildcommand2",
                                        "name": "stepName",
                                        "description": "myDescription",
                                        "type": "Run",
                                        "timeout": "90s",
                                        "skipCondition": "someExpression",
                                        "spec": {
                                            "envVariables": {
                                                "key": "value1",
                                                "key2": "val2"
                                            },
                                            "outputVariables": [
                                                "var1",
                                                "var2"
                                            ],
                                            "command": "some command or commands",
                                            "connectorRef": "gcrConnector",
                                            "image": "us.gcr.io/platform-205701/mysql:12",
                                            "resources": {
                                                "limits": {
                                                    "memory": "64MiB",
                                                    "cpu": "250m"
                                                }
                                            },
                                            "reports":
                                                {
                                                    "type": "JUnit",
                                                    "spec": {
                                                        "paths": [
                                                            "rspec.xml"
                                                        ]
                                                    }
                                                }
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        ]
    }
}