version: 1

stages:
- desc: converted from travis.yml
  name: pipeline
  type: ci
  spec:
    steps:
    - name: postgresql
      type: background
      spec:
        image: postgres
        ports:
        - "5432"
        envs:
          POSTGRES_USER: postgres
          POSTGRES_PASSWORD: postgres
    - name: install
      type: script
      spec:
        run: bundle install --jobs=3 --retry=3
    - name: script
      type: script
      spec:
        run: rake
