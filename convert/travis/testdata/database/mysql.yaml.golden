version: 1

stages:
- desc: converted from travis.yml
  name: pipeline
  type: ci
  spec:
    steps:
    - name: mysql
      type: background
      spec:
        image: mysql
        ports:
        - "3306"
        envs:
          MYSQL_ALLOW_EMPTY_PASSWORD: yes
          MYSQL_DATABASE: test
          MYSQL_USER: root
    - name: install
      type: script
      spec:
        run: bundle install --jobs=3 --retry=3
    - name: script
      type: script
      spec:
        run: rake
